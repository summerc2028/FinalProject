<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'application/shim' %>
</head>
<body>
  <%= render 'application/header' %>
  <div id="wrapper">
    <div id="sidebar-wrapper">
      <ul class="nav nav-stacked" id ="sidebar">
        <%= gravatar_for(@user) %>

        <li class="<%= is_active 'users', 'show' %>">
          <%= link_to "My Profile", usernames_path(current_user.username) if current_user %></li>
        <li class="<%= is_active 'users', 'show_day' %>  <%= is_active 'activities', 'show'%>"><%= link_to "My Activity", show_day_path(current_user.username) %></li>
        <li class="<%= is_active 'users', 'calendar' %>"><%= link_to "My Calendar", calendar_path(current_user.username) if current_user %></li>
        <li class="<%= is_active 'users', 'exercise_food' %>"><%= link_to "My Exercise and Food", exercise_food_path(current_user.username) %></li>
        <li class="<%= is_active 'users', 'settings' %>"><%= link_to "My Account Settings", settings_path(current_user.username) %></li>
      </ul>
    </div>

    <div id="page-content-wrapper">
      <div class="page-content inset">
        <div class="row">
          <div class="col-md-12 ">
            <%= render 'application/flash' %>
            <%= yield %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>
