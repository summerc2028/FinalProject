<% provide :title, "Settings" %>

<h1 class="page-header">Settings</h1>
<button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#del-account-modal">Delete Account</button>

<!-- Delete Account Modal -->
<div class="modal fade" id="del-account-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- "Are You Sure" Form -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Are You Sure?</h4>
      </div>
      <div class="modal-body">
        <%= link_to "Delete", destroy_usernames_path(params[:username]), method: :delete, class: "btn btn-primary" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
