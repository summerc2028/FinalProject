<% provide :title, @exercise.name %>
<h1 class="page-header">My Exercise List</h1>
<%= form_tag update_exercise_path %>
<%= render 'application/exercise_error_messages' %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        Info
        <% if current_user? User.find_by_username(params[:username]) %>
          <%= link_to delete_exercise_path(username: params[:username], id: @exercise.id), id: "del-exercise", class: "btn btn-default", "data-toggle" => "tooltip", title: "Delete" do %>
            <span class="glyphicon glyphicon-remove glyph-button"></span>
          <% end %>
          <button id="edit-exercise" type="button" class="btn btn-default" data-toggle="tooltip" title="Edit">
            <span class="glyphicon glyphicon-pencil"></span>
          </button>
        <% end %>
      </h3>
    </div>
    <table class="table table-hover">
      <tbody>
        <tr>
          <td><b>Description:</b></td>
          <td id="Exer_Desc"><%= @exercise.name %></td>
        </tr>
        <tr>
          <td><b>Calories:</b></td>
          <td id="Exer_Cal"><%= @exercise.calories %></td>
        </tr>
        <tr>
          <td><b>Date:</b></td>
          <td id="Exer_Date"><%= date_for @exercise %></td>
        </tr>
        <tr>
          <td><b>Time:</b></td>
          <td id="Exer_Time"><%= @exercise.time.strftime("%l:%M %p") %></td>
        </tr>
      </tbody>
    </table>
  </div>
</form>
