<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'application/shim' %>
</head>
<body>
  <%= render 'application/header' %>
  <div id="wrapper">
    <div id="sidebar-wrapper">
      <ul class="nav nav-stacked" id ="sidebar">
        <%= gravatar_for(@user) %>

        <li class="<%= is_active 'show'%>"><%= link_to "Profile", usernames_path(current_user.username) if current_user %></li>
        <li class="<%= is_active 'show_day'%>"><%= link_to "Activity", show_day_path(params[:username]) %></li>
        <li class="<%= is_active 'calendar'%>"><%= link_to "Calendar", calendar_path(current_user.username) if current_user %></li>
        <li class="<%=is_active 'exercise'%>"><%= link_to "Exercise and food", exercise_path(current_user.username) if current_user %></li>

        <li><a href="#">Settings</a></li>
      </ul>
    </div>

    <div id="page-content-wrapper">
      <div class="page-content inset">
        <div class="row">
          <div class="col-md-12 ">
            <%= render 'application/flash' %>
            <%= yield %>
              <pre>
                <%= debug(params) if Rails.env.development? %>
              </pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>
